# OBS-related settings
#OBS_EXE_PATH=C:\Program Files\obs-studio\bin\64bit\obs64.exe
OBS_PORT=4455
OBS_PASSWORD=password
OBS_HEARTBEAT=15
OBS_HEARTBEAT_FAIL_ALERT_THRESHOLD=4
OBS_AUTO_DISMISS_SAFEMODE=true
AUTO_BOOTSTRAP=true

# App identity / environment for logs and metrics
APP_NAME=obs-ws-server
ENV=dev

# Enable JSON file logging for Filebeat
LOG_FILE_ENABLED=1
LOG_DIR=logs
LOG_FILE_NAME=server.log
LOG_ROTATION=time
LOG_WHEN=midnight
LOG_DAILY_SPLIT=true
LOG_INTERVAL=1
LOG_BACKUP_COUNT=14
LOG_UTC=0

LEGION=KOREA
OVERLAY_BRAND=Mirroless Studio
OVERLAY_BRAND_COLOR=#FFFFFF
OVERLAY_CLOCK_ENABLED=1

# Diagnostics token (required for /api/diagnostics and related endpoints)
DIAG_TOKEN=please-change-me

# Optional: screenshot and hotkey defaults
SCREENSHOT_DIR=C:\Screenshots

# ELK-related settings
ELK_AUTO_IMPORT=true # false
KIBANA_URL=http://your-kibana:5601
KIBANA_IMPORT_TIMEOUT_SEC=600

# Discord
DISCORD_WEBHOOK_URL=your-discord-webhook-url